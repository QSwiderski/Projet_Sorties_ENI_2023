{% extends 'base.html.twig' %}

{% block body %}
    <h2>Gérer les sites</h2>
    <h3>Filtrer les sites</h3>
    <form action={{ path('school_index') }} method="GET" name="Formulaire">
        Le nom contient: <input name="Research" type="text" id="Research" size="30" >
        <input type="submit" value="Rechercher">
    </form>
    <br>
    {%  if(saisie) %}
        <p>Vous avez cherché {{ saisie }}</p>
    {% endif %}

    <p>Sites de rattachement : </p>
    {% for school in schools %}
        <div>{{ school.name }}</div>
        <div><a target="_blank"  href="https://www.google.fr/maps?q={{ school.latitude }},{{ school.longitude }}">Voir sur la carte</a></div>
        <div><a href={{ path('school_delete',{'id':school.id}) }}>Supprimer</a></div>
        <div><a href={{ path('school_modify',{'id':school.id}) }}>Modifier</a></div>

        <br>
    {% endfor %}
