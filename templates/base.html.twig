<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sorties.com{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('style/style.css') }}">
    {% endblock %}

</head>
<header>
    <div><a href={{ path('home_index') }}>
            <img src="{{ asset('/pictures/event-g84ed401ec_640.png') }}"
                 alt="logo event"
                 id="logo"/>
        </a></div>
    <div>
        {% if (app.user) %}
            {% if(is_granted('ROLE_ADMIN')) %}
            <h2><a href="{{ path('home_admin') }}">Administrer</a></h2>
            {% endif %}
            <h2><a href="{{ path('app_user_show', {'id': app.user.id}) }}">{{ app.user.pseudo }}</a></h2>
            <h2><a href="{{ path('app_logout') }}">Deconnexion</a></h2>
        {% else %}
            <h2><a href="{{ path('app_login') }}">Connexion</a></h2>
        {% endif %}
    </div>
</header>
<body>
{% block body %}{% endblock %}
</body>
<footer>

</footer>

{% block javascripts %}
{% endblock %}
</html>
