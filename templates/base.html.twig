<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sorties.com{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('style/style.css') }}">
    {% endblock %}

</head>
<header>
    <div><a href={{ path('home_index') }}>
            <img src="{{ asset('/pictures/event-g84ed401ec_640.png') }}"
                 alt="logo event"
                 id="logo"/>
        </a></div>
    <div>
        {% if (app.user) %}
            {% if(is_granted('ROLE_ADMIN')) %}
            <h2><a href="{{ path('home_admin') }}">Administrer</a></h2>
            {% endif %}
            <h2><a href="{{ path('user_show', {'id': app.user.id}) }}">{{ app.user.pseudo }}</a></h2>
            <h2><a href="{{ path('app_logout') }}">Deconnexion</a></h2>
        {% else %}
            <h2><a href="{{ path('app_login') }}">Connexion</a></h2>
        {% endif %}
    </div>
</header>
<body>
{% block body %}{% endblock %}
</body>
<footer>

</footer>

{% block javascripts %}
{% endblock %}
</html>
