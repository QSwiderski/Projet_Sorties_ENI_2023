<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>{% block title %}Sorties.com{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('style/style.css') }}">
    {% endblock %}
</head>


<header>
<div class="header">

    <div class="logo">
        <a href={{ path('home_index') }}>
            <img src="{{ asset('/images/logotransparent.png') }}"
                 alt="logo event"
                 id="logo"/>
        </a>


    <div class = "columns">
        {% if (app.user) %}
            {% if(is_granted('ROLE_ADMIN')) %}
                <b class = "column">
                    <h2><a class="glowing-btn glowing-txt"
                           href="{{ path('user_show', {'id': app.user.id}) }}">{{ app.user.pseudo }}</a></h2>
                </b>

            {% endif %}
            <b class = "column">
                <h2><a class="glowing-btn glowing-txt"
                       href="{{ path('home_admin') }}">Administrer</a></h2>
            </b>

            <b class = "column">
                <h2><a class="glowing-btn glowing-txt"
                       href="{{ path('app_logout') }}">Deconnexion</a></h2>
            </b>
        {% else %}

            <h2><a class="glowing-btn glowing-txt"
                   href="{{ path('app_login') }}">Connexion</a></h2>

        {% endif %}

    </div>
    </div>
</div>
</header>

<body>
{% block body %}{% endblock %}
</body>


<footer>
    <audio id="bg-audio" src="{{ asset("sound/lady-of-the-80s.mp3") }}"></audio>
    <audio id="neon-audio" src="{{ asset("sound/neon_on.mp3") }}"></audio>
</footer>

{% block javascripts %}
{% endblock %}
<script src="{{ asset("JS/default.js") }}"></script>
</html>