{% extends 'base.html.twig' %}

{% block title %}{{ edit? 'Modifier':'Créer' }} un evenement - {{ parent() }}{% endblock %}

{% block body %}

    <div class="format">
        <div class="champForm">
            <h2>{{ edit? 'Modifier un ':'Creer un nouvel' }} Evènement</h2>
        </div>
        {{ form_start(form) }}
        <div class="champForm">
            {{ form_row(form.name) }}
        </div>
        <div class="champForm">
            {{ form_row(form.dateStart)}}
        </div>
        <div class="champForm">
            {{ form_row(form.dateFinish) }}
        </div>
        <div class="champForm">
            {{ form_row(form.peopleMax) }}
        </div>
        <div class="champForm">
            {{ form_row(form.description) }}
        </div>
        <div class="champForm">
            {{ form_row(form.location) }}
        </div>
        <div id="loc_create">(+)</div>

        <div class="champForm">
            {{ form_row(form.dateLimit) }}
        </div>
        <button class="glowing-btn glowing-txt to-left">{{ edit? 'Appliquer':'Créer' }}</button>
        {{ form_end(form) }}
        <br>
        <br>
        <br>
        <div><label for="school_name">Ecole de rattachement</label>
            <p id="school_name">{{ app.user.school.name }}</p></div>

        <a class="glowing-btn glowing-txt to-left" href="{{ path('home_index') }}">Retour à L'accueil</a>
    </div>

    <div id="hidden">{{ path('location_create') }}</div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('JS/addNewLocation.js') }}"></script>
{% endblock %}