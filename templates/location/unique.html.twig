{% extends 'base.html.twig' %}

{% block title %}{{ location.name }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <h2>{{ location.name }}</h2>
        <p>nom : {{ location.name }}</p>
        <p>adresse : {{ location.adress }}</p>
        <p>code postal : {{ location.postcode }}</p>
        <p>ville : {{ location.city }}</p>
        <p>latitude : {{ location.latitude }}</p>
        <p>longitude : {{ location.longitude }}</p>
    </div>
    {% if (is_granted('ROLE_ADMIN')) %}
        <a href="{{ path('location_index') }}">Retour à la liste des lieux</a>
    {% endif %}
    <form>
        <a href="{{ path('event_create') }}">Retour à la création d'evenement</a>
    </form>

{% endblock %}
